<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/touming">

    <ImageButton
        android:id="@+id/ibtn_my_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_click_citymanager"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_my_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chillax_medium"
        android:text="Chang'an"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/ibtn_my_city"
        app:layout_constraintTop_toTopOf="@+id/ibtn_my_city" />

    <TextView
        android:id="@+id/tv_my_city_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chillax_light"
        android:text="Sunny"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/ibtn_my_city"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_city_name" />

    <TextView
        android:id="@+id/tv_my_city_temp_high_and_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chillax_light"
        android:layout_marginLeft="10dp"
        android:text="30°/19°"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tv_my_city_weather"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_city_name" />

    <TextView
        android:id="@+id/tv_my_city_tempreture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chillax_medium"
        android:text="30°"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_my_city"
        app:layout_constraintTop_toTopOf="@+id/ibtn_my_city" />

</androidx.constraintlayout.widget.ConstraintLayout>