<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabStyle">
        <item name="tabGravity">start</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabMode">scrollable</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>

        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>